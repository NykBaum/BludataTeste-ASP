                @Html.ValidationMessageFor(model => model.cpf, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.data_cad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
